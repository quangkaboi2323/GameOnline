
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            height: 600px;
            position: relative;            
        }

        .center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        .button {
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 10%;
            background-color: #008CBA;
        }
    </style>
    <title>Hoàn thành</title>
</head>
<body>
    <div>
        @Html.ActionLink("Quay lại trang chủ", "Home")
    </div>
    <div class="container">
