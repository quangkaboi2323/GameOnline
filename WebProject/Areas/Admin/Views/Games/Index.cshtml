@model List<WebProject.Models.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 3);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        <h2><b>QUẢN LÝ DANH SÁCH GAME</b></h2>
    </div>
    <div id="gridContent">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
            columns: new[]
            {
                grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                grid.Column("MaGame","Mã trò chơi"),
                grid.Column("TenGame","tên trò chơi"),
                grid.Column("NgayRaMat","Ngày ra mắt",format:@<text> @item.NgayRaMat.ToString("dd/MM/yyyy")</text>),
                grid.Column("Gia","Giá", format:@<text> @item.Gia.ToString("#,##0")</text>),
                grid.Column("Luottai","Lượt tải"),
                grid.Column("OSName","Hệ điều hành"),
                grid.Column("MemoryName","Dung lượng ram"),
                grid.Column("ProcessName","Chip xử lý"),
                grid.Column("GraphicsName","Card đồ họa"),
                grid.Column("TheLoai.TenTheLoai","Thể loại"),
                grid.Column("NhaPhatTrien.TenNPT","Nhà phát triển"),
                grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "Games",new { id = item.MaGame },"GamesController")),
                grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","Games", new { id = item.MaGame },"GamesController")),
                grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","Games", new { id = item.MaGame },"GamesController")),
            }
)
    </div>
    <p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
</body>
</html>
